<?xml version="1.0" encoding="UTF-8"?>
<serializable namespace="Ref" name="PacketStat">
    <comment>
    Some Packet Statistics
    </comment>
    <members>
        <member name="BuffRecv" type="U32" comment = "Number of buffers received"/>
        <member name="BuffErr" type="U32" comment = "Number of buffers received with errors"/>
        <member name="PacketStatus" type="ENUM" comment = "Packet Status">
            <enum name="PacketRecvStatus">
                <item name="PACKET_STATE_NO_PACKETS"/>
                <item name="PACKET_STATE_OK"/>
                <item name="PACKET_STATE_ERRORS" value="3" comment="Receiver has seen errors"/>
            </enum>
        </member>
    </members>
</serializable>

